generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgres"
    url      = env("DATABASE_URL")
}

model Document {
    id        String   @id @default(uuid())
    name      String
    content   Json
    icon      String   @default("ðŸ“„")
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

enum DataSourceType {
    POSTGRES
}

model DataSource {
    id          String         @id @default(uuid())
    name        String
    description String
    type        DataSourceType

    postgresConfig   PostgresConfiguration? @relation(fields: [postgresConfigId], references: [id])
    postgresConfigId String?                @unique
}

model PostgresConfiguration {
    id       String          @id @default(uuid())
    host     String
    port     Int
    database String
    user     String
    password String
    tables   PostgresTable[]

    dataSource DataSource?
}

model PostgresTable {
    id               String                @id @default(uuid())
    name             String
    alias            String
    postgresConfig   PostgresConfiguration @relation(fields: [postgresConfigId], references: [id])
    postgresConfigId String
    columns          PostgresColumn[]
}

model PostgresColumn {
    id    String @id @default(uuid())
    name  String
    alias String

    postgresTable   PostgresTable @relation(fields: [postgresTableId], references: [id])
    postgresTableId String
}
